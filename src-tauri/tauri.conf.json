{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PDF Highlighter",
  "version": "0.1.0",
  "identifier": "com.pdfhighlighter.app.dev",
  "build": {
    "frontendDist": "../example/dist",
    "devUrl": "http://localhost:3847",
    "beforeDevCommand": "npm run web:dev",
    "beforeBuildCommand": "npm run build:example"
  },
  "app": {
    "windows": [
      {
        "title": "PDF Highlighter",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
