{
  "name": "react-pdf-highlighter",
  "version": "6.1.0",
  "description": "Set of React components for PDF annotation",
  "author": "Artem Tyurin <artem.tyurin@gmail.com>",
  "license": "MIT",
  "keywords": [
    "pdf",
    "highlight",
    "annotator",
    "react-component"
  ],
  "files": [
    "dist", "README.md", "LICENSE"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "(cd ./example && vite)",
    "build": "npm run clean && npm run build:esm && npm run build:copy-styles && npm run build:example",
    "build:esm": "tsc",
    "build:copy-styles": "cp -r ./src/style ./dist",
    "build:example": "(cd ./example && tsc && vite build)",
    "test": "tsc && npm run format:check && npm run test:e2e",
    "test:e2e": "playwright test",
    "format": "prettier --write './**/*.{js,ts,tsx}'",
    "format:check": "prettier --check './**/*.{js,ts,tsx}'",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "pdfjs-dist": "^4.4.168",
    "react-rnd": "^10.1.10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agentcooper/react-pdf-highlighter.git"
  },
  "bugs": {
    "url": "https://github.com/agentcooper/react-pdf-highlighter/issues"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.1",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^20.4.5",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "playwright": "^1.45.1",
    "prettier": "^2.3.2",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  }
}
